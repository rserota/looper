@import "variables"

body {
    background-color: slategray;
    /*padding: 20px;*/
}
[v-cloak] {
    display: none;
}
h3 {
    margin-top: 15px;
    margin-bottom: 15px;
}

h2 {
    color: black;
    transition: all .3s;
    margin-bottom: 0;
    // border-bottom: 0px solid $white;
}


a:hover {
    text-decoration: none;
}
.container {
    padding: 0;
}
.beatBox {
    display : inline-block;
    height : 50px;
    width : 50px;
    border : 3px solid black;
    border-radius: 5px;
    margin : 5px;
    transition : all .01s;
    text-align:center;
    line-height:150px;
    vertical-align: middle;
    background-color: rgb(110,150,120);
}
#controls {
    vertical-align: top;
}
.instrument-config .card-body {
    border-radius: 1px;
    background-color: $white;
    border-color: $white;
}
#controls button {
    margin: 5px;
}
button:focus {
    outline:0;
}

.beat-map {
    width: 50vw;
    border: 2px solid black;
    border-radius: 5px;
    line-height: 0;
}


.beat-box {
    background-color: aliceblue;
    border: 1px solid black;
    border-radius: 4px;
    height: 20px;
}
.active-beat {
    background-color: red;
}

.bordered {
    border-left: 3px solid $black;
    border-top: 3px solid $black;
    border-bottom: 3px solid $black;
    border-right: 3px solid $black;
}

.alpha {
    background-color: $alpha;
    color: $alpha-text;
}
a[aria-expanded="false"] h2:hover {
    border-bottom: 3px solid $black;
    transition: all .5s;
}

.beta {
    background-color: $beta;
    color: $beta-text;
}
.gamma {
    background-color: $gamma;
    color: $gamma-text;
}
.delta {
    background-color: $delta;
    color: $delta-text;
}
.epsilon {
    background-color: $epsilon;
    color: $epsilon-text;
}

.volume-bar {
    background-color: $white;
    border: 2px solid $black;
}

.volume-bar.scheduled {
    // border: 2px solid yellow;
    box-shadow: 4px 4px 2px;
}

.volume-bar.recording {
    // border: 2px solid yellow;
    background-color: $red;
}
.volume-bar.muted {
    // border: 2px solid yellow;
    opacity: .1;
}