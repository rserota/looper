<div class="beat-map">
    div(
        v-for="n in beatsPerLoop" 
        class="beat-box d-inline-block" 
        v-bind:style="{width: beatBoxWidth}"
        v-bind:class="{'active-beat': ls.clock.curBeat == n}"
    ) {{n}}
</div>
<div class="d-inline-block" v-for="loopTrack in loopTracks">
    //- <marquee>Voluuuume!</marquee>
    <div class="volume-bar d-inline-block" v-bind:style="{height:(loopTrack.state.volume/100)+'px'}">VOLUME: {{loopTrack.state.volume}}</div>
</div>